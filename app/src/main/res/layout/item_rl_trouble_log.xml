<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_tv_trouble_time"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sourcejansanscnregular"
        android:includeFontPadding="false"
        android:text="2023-02-10 12:22:32"
        android:textColor="@color/green_304129"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_trouble_type"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/sourcejansanscnregular"
        android:includeFontPadding="false"
        android:text="2"
        android:textColor="@color/green_304129"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_trouble_time"
        app:layout_constraintStart_toEndOf="@+id/item_tv_trouble_time"
        app:layout_constraintTop_toTopOf="@id/item_tv_trouble_time" />

    <TextView
        android:id="@+id/item_tv_trouble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/sourcejansanscnregular"
        android:includeFontPadding="false"
        android:text="搅拌电机故障"
        android:textColor="@color/green_304129"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_trouble_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_tv_trouble_type"
        app:layout_constraintTop_toTopOf="@+id/item_tv_trouble_type" />
    <View
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/green_304129"
        app:layout_constraintTop_toBottomOf="@id/item_tv_trouble_time"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>