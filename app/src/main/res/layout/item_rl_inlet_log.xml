<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_tv_inlet_time"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sourcejansanscnregular"
        android:includeFontPadding="false"
        tools:text="2023-02-10 12:22:32"
        android:textColor="@color/green_304129"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_inlet_weight"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/sourcejansanscnregular"
        android:includeFontPadding="false"
        tools:text="24.2KG"
        android:textColor="@color/green_304129"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_inlet_time"
        app:layout_constraintStart_toEndOf="@+id/item_tv_inlet_time"
        app:layout_constraintTop_toTopOf="@id/item_tv_inlet_time" />

    <TextView
        android:id="@+id/item_tv_login_type"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/sourcejansanscnregular"
        android:includeFontPadding="false"
        android:text="@string/login_type_pw"
        android:textColor="@color/green_304129"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_inlet_weight"
        app:layout_constraintStart_toEndOf="@+id/item_tv_inlet_weight"
        app:layout_constraintTop_toTopOf="@+id/item_tv_inlet_weight" />

    <TextView
        android:id="@+id/item_tv_inlet_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/sourcejansanscnregular"
        android:includeFontPadding="false"
        tools:text="1578625g"
        android:paddingBottom="3dp"
        android:paddingTop="2dp"
        android:textColor="@color/green_304129"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_login_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_tv_login_type"
        app:layout_constraintTop_toTopOf="@+id/item_tv_login_type" />
    <View
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/green_304129"
        app:layout_constraintTop_toBottomOf="@id/item_tv_inlet_time"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>