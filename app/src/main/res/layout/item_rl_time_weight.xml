<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/sourcejansanscnregular"
        android:includeFontPadding="false"
        android:textColor="@color/blue_5BB8E8"
        android:textSize="20sp"
        android:lines="1"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="第1次" />

    <TextView
        android:id="@+id/item_tv_kg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/sourcejansanscnregular"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:paddingBottom="3dp"
        android:maxLines="1"
        android:textColor="@color/blue_5BB8E8"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_tv_time"
        app:layout_constraintTop_toTopOf="@+id/item_tv_time"
        tools:text="81.2kg" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/blue_5BB8E8"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/item_tv_kg"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>