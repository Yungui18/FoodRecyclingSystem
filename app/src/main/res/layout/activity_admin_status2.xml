<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/include"
        layout="@layout/activity_common" />

    <Button
        android:id="@+id/btn_back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="86dp"
        android:background="@mipmap/return_white"
        android:fontFamily="@font/notosanskrmedium"
        android:gravity="center_vertical|end"
        android:includeFontPadding="false"
        android:lines="1"
        android:paddingStart="65dp"
        android:paddingEnd="16dp"
        android:text="@string/back2"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="60dp"
        android:stretchColumns="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:id="@+id/tv1"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/power_source"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/run_mode"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv3"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/stir_motor2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv4"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/stri_senor_error"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv5"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/air_temperature"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv10"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="@string/Motor_Shaft_Status"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv1_power_source"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                tools:text="@string/on" />

            <TextView
                android:id="@+id/tv2_run_mode"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                tools:text="@string/automation" />

            <TextView
                android:id="@+id/tv3_stir_motor"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                tools:text="@string/on" />

            <TextView
                android:id="@+id/tv4_stir_motor_error"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                tools:text="@string/normal" />

            <TextView
                android:id="@+id/tv5_air_temperature"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                tools:text="30℃" />

            <TextView
                android:id="@+id/tv10_motor_shaft_status"
                style="@style/activity_admin_status_TextView2"
