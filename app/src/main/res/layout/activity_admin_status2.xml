            <TextView
                android:id="@+id/tv24"
                style="@style/activity_admin_status_TextView3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="Lock"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv19_led2"
