                tools:text="35℃" />

            <TextView
                android:id="@+id/tv11_air_humidity"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                tools:text="89%" />

            <TextView
                android:id="@+id/tv12_light"
                style="@style/activity_admin_status_TextView2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                tools:text="@string/off" />
        </TableRow>

        <TableRow>

