<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="8dp">

            <me.grantland.widget.AutofitLayout
                android:id="@+id/auto_fit_layout_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btn_back"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_button_confirm_press"
                    android:fontFamily="@font/sourcejansanscnregular"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:text="back"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="27sp" />
            </me.grantland.widget.AutofitLayout>


            <Button
                android:id="@+id/trouble_test_btn1_stir_forward"
                style="@style/admin_button_trouble_test"
                android:text="stir_forward"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/auto_fit_layout_back"
                app:layout_constraintStart_toEndOf="@+id/auto_fit_layout_back"
                app:layout_constraintTop_toTopOf="@+id/auto_fit_layout_back" />

            <Button
                android:id="@+id/trouble_test_btn1_stir_off"
                style="@style/admin_button_trouble_test"
                android:text="stir power off"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/trouble_test_btn1_stir_forward"
                app:layout_constraintStart_toEndOf="@+id/trouble_test_btn1_stir_forward"
                app:layout_constraintTop_toTopOf="@+id/trouble_test_btn1_stir_forward" />

            <Button
                android:id="@+id/trouble_test_btn2_inlet_open"
                style="@style/admin_button_trouble_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="door open"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auto_fit_layout_back" />

            <Button
                android:id="@+id/trouble_test_btn2_inlet_close"
                style="@style/admin_button_trouble_test"
                android:text="door close"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/trouble_test_btn2_inlet_open"
                app:layout_constraintStart_toEndOf="@+id/trouble_test_btn2_inlet_open"
                app:layout_constraintTop_toTopOf="@+id/trouble_test_btn2_inlet_open" />

            <Button
                android:id="@+id/trouble_test_btn2_inlet_lock"
                style="@style/admin_button_trouble_test"
                android:text="door lock"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/trouble_test_btn2_inlet_close"
                app:layout_constraintStart_toEndOf="@+id/trouble_test_btn2_inlet_close"
                app:layout_constraintTop_toTopOf="@+id/trouble_test_btn2_inlet_close" />
            <Button
                android:id="@+id/trouble_test_btn2_inlet_unlock"
                style="@style/admin_button_trouble_test"
                android:text="door unlock"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/trouble_test_btn2_inlet_lock"
                app:layout_constraintStart_toEndOf="@+id/trouble_test_btn2_inlet_lock"
                app:layout_constraintTop_toTopOf="@+id/trouble_test_btn2_inlet_lock" />




























        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>